@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <input id="a" />
    <input id="b" />
    <button id="btn1">Вычислить</button>

    <div id="partial">
        @await Component.InvokeAsync("_add", new { a = 1, b = 2 })
    </div>
</div>

@* Не нашел, как обновить партиал со страницы для полноценного SPA, поэтому грязный хак: *@
<script type="text/javascript">
    document.getElementById("btn1").onclick = function () {
        var a = document.getElementById('a').value;
        var b = document.getElementById('b').value;
        $.get("http://localhost:5055/add/" + a + "/" + b, function (response) {
            var s = document.getElementById('divValue');
            s.textContent = response;
        });
    };
</script>

